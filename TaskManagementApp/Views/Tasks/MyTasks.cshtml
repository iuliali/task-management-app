@if (TempData.ContainsKey("Message"))
{
    <h2 class="alert @TempData["MessageStyle"] p-3 rounded-3 text-center mb-5">
        @TempData["Message"]
    </h2>
}
<h2>
My Tasks
</h2>
<br />

@foreach (var task in ViewBag.MyTasks)
{
    <div class="card">
        <div class="card-body">

            <h3 class="card-title alert-success py-3 px-3 rounded-2">
                <a class="nav-link text-dark" href="/Tasks/Show/@task.Id"> @task.Name</a>

            </h3>
@*            <div>Description: @task.Description </div>
        *@           
            <div>Project: <a class="nav-link text-dark" href="/Projects/Show/@task.ProjectId"> @task.Project.Name</a></div>
            <div>Status : @task.status</div>
            <div>Created : @task.CreatedDate</div>
            @*@if(task.status != "Completed") {
                <div>Finished : @task.FinishedDate</div>
            }*@

        </div>
    </div>
    <br />
}