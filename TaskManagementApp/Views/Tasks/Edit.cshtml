@model TaskManagementApp.Models.Task

@if (TempData.ContainsKey("Message"))
{
    <h2 class="alert @TempData["MessageStyle"] p-3 rounded-3 text-center mb-5">
        @TempData["Message"]
    </h2>
}

<h2>Edit task</h2>
<br />
@*<p>You can edit task name and task status</p>*@


@using (Html.BeginForm(controllerName: "Tasks", actionName: "Edit",
      method: FormMethod.Post, routeValues: new { id = Model.Id }))

{
    @Html.Label("Name", "Task Name")
    <br />
    @Html.Editor("Name", new { @class = "form-control" })
    @Html.ValidationMessage("Name", null, new { @class = "text-danger" })
    <br />
    <br />
    //@Html.HiddenFor(t => t.Name, new{Value = ViewBag.TaskToEdit.Name});
    @Html.HiddenFor(t => t.UserId, new{Value = ViewBag.TaskToEdit.UserId});
    @Html.HiddenFor(t => t.Description, new{Value = ViewBag.TaskToEdit.Description});
    @Html.Label("status", "Status")
    <br />
    <select name="status" class="form-control" required>
        <option value="Not Started">Not Started</option>
        <option value="In Progress">In Progress</option>
        <option value="Completed">Completed</option>
    </select>
    <br />
    @Html.ValidationMessage("status", null, new { @class = "text-danger" })
    <br />
    <br />
    <button class="btn btn-sm btn-success" type="submit">Save Changes</button>

}
