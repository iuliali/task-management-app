<h2>Afisare proiecte</h2>
<br />
@if (ViewBag.Message != null)
{
    <h2 class="alert-success p-3 rounded-3 text-center mb-5">@ViewBag.Message</h2>
}
@foreach (var project in ViewBag.Projects)
{
    <div class="card">
        <div class="card-body">

            <h3 class="card-title alert-success py-3 px-3 rounded-2"><a href="/Projects/Show/@project.Id">@project.Name</a></h3>

            <div class="card-text">@project.Description</div>
            <div class="card-text">Creat de @project.User.FirstName la data de @project.CreatedDate.ToShortDateString()</div>


        </div>
    </div>
    <br />
}