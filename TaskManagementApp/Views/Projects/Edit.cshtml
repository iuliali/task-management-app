@model TaskManagementApp.Models.Project


<h2>Edit project </h2>
<br />

@if (TempData.ContainsKey("Message"))
{
    <h2 class="alert @TempData["MessageStyle"] p-3 rounded-3 text-center mb-5">
        @TempData["Message"]
    </h2>
}


@using (Html.BeginForm(controllerName: "Projects", actionName: "Edit",
     method: FormMethod.Post, routeValues: new { id = Model.Id }))

{
    @Html.Label("Name", "Project Name")
    <br />
    @Html.Editor("Name", new { @class = "form-control" })
    @Html.ValidationMessage("Name", null, new { @class = "text-danger" })
    <br />
    <br />

    @Html.Label("Description", "Project Description")
    <br />
    @Html.Editor("Description", new { @class = "form-control" })
    @Html.ValidationMessage("Description", null, new { @class = "text-danger" })
    
    
    <br />
    <br />
    <button class="btn btn-sm btn-success" type="submit">Save Changes</button>

}

