<h2>@ViewBag.Project.Name</h2>

@foreach (var task in ViewBag.Tasks)
{
    <div class="card">
        <div class="card-body">

            <h3 class="card-title alert-success py-3 px-3 rounded-2">@task.Name</h3>
            <div>Assigned to : @task.User.FirstName</div>
            <div>Status : @task.status</div>




        </div>
    </div>
    <br />
}