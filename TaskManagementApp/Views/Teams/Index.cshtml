@if (TempData.ContainsKey("Message"))
{
    <h2 class="alert @TempData["MessageStyle"] p-3 rounded-3 text-center mb-5">
        @TempData["Message"]
    </h2>
}
<h2>All teams</h2>
<br />


@foreach (var team in ViewBag.Teams)
{
    <div class="card">
        <div class="card-body">

            <h3 class="card-title alert-success py-3 px-3 rounded-2"><a href="/Teams/Show/@team.Id">@team.Name</a></h3>

            <div class="card-text">@team.Id</div>

        </div>
    </div>
    <br />
}